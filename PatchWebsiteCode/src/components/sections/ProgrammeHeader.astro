---
import Button from '../ui/Button.astro';

interface Photo {
    src: string;
    alt: string;
}

interface Props {
    title: string;
    description: string;
    ctaText?: string;
    ctaHref?: string;
    photos?: Photo[];
}

const {
    title,
    description,
    ctaText = "Apply Now",
    ctaHref = "#",
    photos = []
} = Astro.props;
---

<section class="programme-header">
    <!-- Subtle background pattern with logos -->
    <div class="header-bg" aria-hidden="true">
        <div class="logo-pattern"></div>
        <div class="gradient-overlay"></div>
    </div>

    <div class="header-layout">
        <div class="header-content">
            <h1>{title}</h1>
            <p class="description">{description}</p>
            <div class="header-actions">
                <Button variant="cta" href={ctaHref}>
                    {ctaText}
                </Button>
            </div>
        </div>

        {photos.length > 0 && (
            <div class="header-photos">
                <div class="polaroid-stack">
                    {photos.slice(0, 4).map((photo, i) => (
                        <div class={`polaroid polaroid-${i + 1}`}>
                            <div class="polaroid-inner">
                                <img src={photo.src} alt={photo.alt} loading="lazy" />
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        )}
    </div>
</section>

<style>
    .programme-header {
        position: relative;
        background: linear-gradient(180deg, #f8fafc 0%, #f0f4f8 100%);
        padding: 64px 24px 80px;
        border-bottom: 1px solid var(--default-border-color);
        overflow: hidden;
    }

    /* Background pattern */
    .header-bg {
        position: absolute;
        inset: 0;
        pointer-events: none;
    }

    .logo-pattern {
        position: absolute;
        inset: 0;
        background-image: url('/VeryLightBlueLogoNoBackground.png');
        background-size: 80px;
        background-repeat: repeat;
        opacity: 0.06;
        transform: rotate(-15deg) scale(1.3);
    }

    .gradient-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            rgba(248, 250, 252, 0.7) 0%,
            rgba(248, 250, 252, 0.3) 50%,
            rgba(240, 244, 248, 0.8) 100%
        );
    }

    .header-layout {
        position: relative;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
        align-items: center;
        max-width: 1100px;
        margin: 0 auto;
        z-index: 1;
    }

    .header-content {
        max-width: 500px;
    }

    .header-content h1 {
        font-family: Georgia, 'Times New Roman', serif;
        font-size: 2.5rem;
        font-weight: 400;
        color: var(--text-primary);
        margin: 0 0 16px;
        line-height: 1.2;
    }

    .description {
        font-size: 1.125rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin: 0 0 28px;
    }

    .header-actions {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
    }

    /* Polaroid photos */
    .header-photos {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 320px;
    }

    .polaroid-stack {
        position: relative;
        width: 280px;
        height: 320px;
    }

    .polaroid {
        position: absolute;
        background: #fff;
        padding: 10px 10px 32px;
        box-shadow:
            0 2px 8px rgba(0, 0, 0, 0.1),
            0 4px 16px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease;
    }

    .polaroid-inner {
        width: 140px;
        height: 110px;
        overflow: hidden;
        background: #f5f5f5;
    }

    .polaroid-inner img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Position and rotate each polaroid */
    .polaroid-1 {
        top: 0;
        left: 0;
        transform: rotate(-4deg);
        z-index: 4;
    }

    .polaroid-2 {
        top: 20px;
        left: 120px;
        transform: rotate(3deg);
        z-index: 3;
    }

    .polaroid-3 {
        top: 140px;
        left: 10px;
        transform: rotate(2deg);
        z-index: 2;
    }

    .polaroid-4 {
        top: 160px;
        left: 130px;
        transform: rotate(-3deg);
        z-index: 1;
    }

    /* Hover effect */
    .polaroid:hover {
        z-index: 10;
        transform: rotate(0deg) scale(1.05);
    }

    /* Responsive */
    @media (max-width: 900px) {
        .header-layout {
            grid-template-columns: 1fr;
            gap: 40px;
            text-align: center;
        }

        .header-content {
            max-width: none;
        }

        .header-actions {
            justify-content: center;
        }

        .header-photos {
            min-height: 280px;
        }

        .polaroid-stack {
            width: 260px;
            height: 280px;
        }

        .polaroid-inner {
            width: 120px;
            height: 95px;
        }

        .polaroid-2 {
            left: 110px;
        }

        .polaroid-4 {
            left: 115px;
        }
    }

    @media (max-width: 480px) {
        .programme-header {
            padding: 48px 16px 60px;
        }

        .header-content h1 {
            font-size: 2rem;
        }

        .description {
            font-size: 1rem;
        }

        .polaroid-stack {
            width: 220px;
            height: 240px;
        }

        .polaroid-inner {
            width: 100px;
            height: 80px;
        }

        .polaroid {
            padding: 8px 8px 24px;
        }

        .polaroid-2 {
            left: 100px;
        }

        .polaroid-3 {
            top: 120px;
        }

        .polaroid-4 {
            top: 130px;
            left: 105px;
        }

        .logo-pattern {
            background-size: 60px;
        }
    }
</style>
