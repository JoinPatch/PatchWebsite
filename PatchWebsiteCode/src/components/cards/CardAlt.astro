---
interface Props {
    title: string;
    description: string;
    figureNum?: string;
    featured?: boolean;
    gridOverlay?: boolean;
    href?: string;
    class?: string;
}

const { title, description, figureNum, featured = false, gridOverlay = false, href, class: className } = Astro.props;
---

<div class:list={['card-alt', { featured, 'with-grid-overlay': gridOverlay }, className]}>
    <!-- Figure number label -->
    {figureNum && <div class="fig-num">{figureNum}</div>}

    <div class="card-alt-image">
        <slot name="image">
            [Image]
        </slot>
        {gridOverlay && <div class="grid-overlay" />}
    </div>
    <div class="card-alt-content">
        <h3>{title}</h3>
        <p>{description}</p>
        {href && (
            <a href={href} class="card-link">DETAILS â†’</a>
        )}
    </div>
</div>

<style>
    .card-alt {
        position: relative;
        padding: 14px;
        padding-top: 20px;
        border: 2px solid rgba(255, 255, 255, 0.5);
        border-radius: 0;
        /* Solid background to mask grid lines */
        background: #4a7fbf;
        transition: all 0.2s ease;
        overflow: visible;
    }

    .card-alt:hover {
        border-color: rgba(255, 255, 255, 0.8);
    }

    /* Figure number - slight rotation for hand-stamped feel */
    .fig-num {
        position: absolute;
        top: -12px;
        right: 16px;
        padding: 4px 10px;
        background: #4a7fbf;
        color: rgba(255, 255, 255, 0.95);
        font-family: 'Courier New', monospace;
        font-size: 0.65rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        border: 2px solid rgba(255, 255, 255, 0.5);
        z-index: 2;
        transform: rotate(0.8deg);
    }

    .card-alt-image {
        position: relative;
        aspect-ratio: 16/9;
        background: rgba(44, 82, 130, 0.3);
        border: 1.5px solid rgba(255, 255, 255, 0.5);
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgba(255, 255, 255, 0.4);
        font-size: 0.8rem;
        font-family: 'Courier New', monospace;
        overflow: hidden;
    }

    .card-alt-image :global(img) {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card-alt-content {
        position: relative;
        padding: 4px 0;
        z-index: 1;
    }

    .card-alt-content h3 {
        font-size: 0.95rem;
        font-weight: 600;
        color: #fff;
        margin-bottom: 8px;
        font-family: 'Courier New', monospace;
        text-transform: uppercase;
        letter-spacing: 0.04em;
    }

    .card-alt-content p {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.75);
        line-height: 1.5;
    }

    .card-link {
        display: inline-block;
        margin-top: 12px;
        font-size: 0.7rem;
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-weight: 600;
        font-family: 'Courier New', monospace;
        letter-spacing: 0.06em;
        padding: 6px 12px;
        border: 1.5px solid rgba(255, 255, 255, 0.5);
        background: transparent;
        transition: all 0.15s ease;
    }

    .card-link:hover {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.8);
    }

    /* Featured variant - 2x prominence */
    .card-alt.featured {
        grid-column: span 2;
        padding: 16px;
    }

    .card-alt.featured .card-alt-image {
        aspect-ratio: 2/1;
    }

    .card-alt.featured .card-alt-content h3 {
        font-size: 1.1rem;
    }

    .card-alt.featured .card-alt-content p {
        font-size: 0.875rem;
    }

    /* Grid overlay on images */
    .grid-overlay {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(to right, rgba(255, 255, 255, 0.15) 1px, transparent 1px),
            linear-gradient(to bottom, rgba(255, 255, 255, 0.15) 1px, transparent 1px);
        background-size: 16px 16px;
        pointer-events: none;
    }

    /* Make image container relative for overlay positioning */
    .card-alt.with-grid-overlay .card-alt-image {
        position: relative;
    }

    /* Responsive: featured card goes single column on mobile */
    @media (max-width: 768px) {
        .card-alt.featured {
            grid-column: span 1;
        }

        .card-alt.featured .card-alt-image {
            aspect-ratio: 16/9;
        }
    }

    /* Hide grid overlay on smaller screens */
    @media (max-width: 640px) {
        .grid-overlay {
            display: none;
        }
    }
</style>
