---
interface Props {
    title: string;
    subtitle?: string;
    class?: string;
}

const { title, subtitle, class: className } = Astro.props;
---

<div class:list={['section-header', className]}>
    <h2>{title}</h2>
    {subtitle && <p>{subtitle}</p>}
</div>

<style>
    .section-header {
        max-width: 1100px;
        margin: 0 auto 32px;
        padding: 0 24px;
    }

    .section-header h2 {
        font-size: 1.5rem;
        font-weight: 400;
        color: var(--color-accent-blue);
        margin-bottom: 8px;
    }

    .section-header p {
        font-size: 1rem;
        color: var(--text-secondary);
    }
</style>
